		    </div>
		  </div>
	</div>
	<!-- Start NAv -->
	<%- include('../partials/navbar') %>
    <!-- END nav -->

	<section class="hero-wrap" style="background-image: url('/images/bg_1.webp');" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row no-gutters slider-text align-items-end justify-content-center">
				<div class="col-md-9 ftco-animate text-center">
					<h1 class="hide mb-2 bread">.</h1>
					<p class="hide breadcrumbs">.</p>
				</div>
			</div>
		</div>
	</section>
	
<!--		<section class="ftco-section ftco-no-pt ftco-no-pb testimony-section img" style="background-image: url(/images/bg_5.webp);">-->
	<section class="ftco-section ftco-no-pt ftco-no-pb mt-5">
		  <div class="container box-form mb-5">

			  <div class="row no-gutters slider-text align-items-end justify-content-center">
				  <div class="col-md-9 ftco-animate text-center">
					  <h1 class="bread">Tambah Produk</h1>
				  </div>
			  </div>

			<div class="container-fluid px-0">
				<div class="row d-flex no-gutters">
					<div class="col-lg-12 form ftco-animate">
						<form action="/dashboard/produk/tambah" method="POST" enctype="multipart/form-data">
							<div class="col-md-12">
								<div class="form-group">
									<label for="">Judul</label>
									<input type="text" name="judul" class="form-control" placeholder="Masukkan judul produk disini" required="">
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group">
									<label for="">Gambar Produk</label>
									<input type="file" name="gambar" class="form-control">
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group">
									<label for="">Deskripsi Produk</label>
									<textarea name="deskripsiProduk" type="text" class="form-control" rows="20" placeholder="Masukkan deskripsi produk disini" required=""></textarea>
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group">
	<!--								<a href="#" class="btn btn-primary py-3 px-5">Tambah</a>-->
									<button type="submit" class="btn btn-primary py-3 px-5">Tambah</button>
									<!-- <button class="btn btn-custom">Batal</button> -->
								</div>
							</div>
						</form>
					</div>
                </div>
			</div>
		  </div>
		</section>

		<%- include('../partials/footer') %>
  

  	<!-- loader -->
  	<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>


  	<%- include('../partials/script') %>

  	<% if(errorFailed.length > 0) {%>
		<script>
			swal({
				title : "Error",
				icon: "error",
				text : "<%=errorFailed%>",
				button: "Okay",
			});
		</script>
	<%}%>
    
  </body>
</html>