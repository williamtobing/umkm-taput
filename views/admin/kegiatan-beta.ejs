<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
<div class="py-1 bg-black top">
    <div class="container">
        <div class="row no-gutters d-flex align-items-start align-items-center px-md-0">
            <div class="col-lg-12 d-block">
                <div class="row d-flex">
                    <marquee direction="right">
                        <div class="col-md pr-4 d-flex topper align-items-center">
                            <!-- <div class="icon mr-2 d-flex justify-content-center align-items-center"><span class="icon-phone2"></span></div> -->
                            <div class="icon mr-2 d-flex justify-content-center align-items-center"></div>
                            <!-- <span class="text">+ 1235 2355 98</span> -->
                            <span class="text"></span>
                        </div>
                        <div class="col-md pr-4 d-flex topper align-items-center">
                            <!-- <div class="icon mr-2 d-flex justify-content-center align-items-center"><span class="icon-paper-plane"></span></div> -->
                            <div class="icon mr-2 d-flex justify-content-center align-items-center"></div>
                            <!-- <span class="text">youremail@email.com</span> -->
                            <span class="text">This website is still under development.</span>
                        </div>
                        <div class="col-md-5 pr-4 d-flex topper align-items-center text-lg-right justify-content-end">
                            <!-- <p class="mb-0 register-link"><span>Open hours:</span> <span>Monday - Sunday</span> <span>8:00AM - 9:00PM</span></p> -->
                            <p class="mb-0 register-link"><span></span> <span></span> <span></span></p>
                        </div>
                    </marquee>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Start Nav -->
<%- include('../partials/navbar') %>
<!-- END nav -->

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_1.webp');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread">Kegiatan</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Dashboard <i class="ion-ios-arrow-forward"></i></a></span> <span>Kegiatan <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

<section class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form action="/admin/kegiatan" class="search-form mb-3" method="GET" id="searchForm">
                    <div class="form-group">
                        <span style="cursor: pointer;" class="icon icon-search" onclick="submitFunc();"></span>
                        <input type="text" name="search" class="form-control" placeholder="Type a keyword and hit enter">
                    </div>
                </form>
            </div>
        </div>

        <div class="text-right mr-3">
            <a class="link" href="/admin/kegiatan/tambah">Tambah Kegiatan</a>
        </div>

        <div class="row mt-3">
            <% listData.forEach(data => { %>
                <div class="col-md-4 ftco-animate">
                    <div class="blog-entry">
                        <a href="/admin/kegiatan/detail/<%=data._id%>" class="block-20" style="background-image: url('/admin/kegiatan/gambar/<%=data._id%>');">
                        </a>
                        <div class="text pt-3 pb-4">
                            <div class="meta">
                                <div><a href="#"><%=data.tanggalDiupload%></a></div>
                                <div><a href="#">Admin</a></div>
                            </div>
                            <h3 class="truncate heading"><a href="#"><%=data.judul%></a></h3>
                            <p class="clearfix">
                                <a href="/admin/kegiatan/detail/<%=data._id%>" class="float-left read">Read more</a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="row no-gutters my-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>


<!-- loader -->
<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>


<%- include('../partials/script') %>

<% if(successDone.length > 0)  {%>
    <script>
        swal({
            title : "Success",
            text : "Berhasil menambahkan kegiatan",
            icon : "success",
            button : "Okay"
        });
    </script>
<%}%>

<script>
    function submitFunc() {
        var form = document.getElementById("searchForm");
        form.submit();
    }
</script>

</body>
</html>